    <RelativePanel>
        <Border x:Name="topPanel" Margin="10" CornerRadius="10, 10, 10, 10" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignLeftWithPanel="True">
            <RelativePanel Background="#121212" Padding="10">
                <Image x:Name="appIcon" Source="/Assets/icon_AppIcon.png" Height="20" Width="20" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True"/>

                <DropDownButton Content="Job Type" VerticalAlignment="Center" HorizontalAlignment="Left" Width="120" RelativePanel.RightOf="appIcon" RelativePanel.AlignVerticalCenterWithPanel="True" Margin="10, 0, 0, 0">
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="Carpenter"/>
                            <MenuFlyoutItem Text="Electrician"/>
                            <MenuFlyoutItem Text="Floorer"/>
                            <MenuFlyoutItem Text="Painter"/>
                            <MenuFlyoutItem Text="Plumber"/>
                            <MenuFlyoutItem Text="Pool Cleaner"/>
                            <MenuFlyoutItem Text="Roofer"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>

                <Button x:Name="filterButton" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True">Filter</Button>
            </RelativePanel>
        </Border>
        <Border x:Name="mainPanel" Margin="10, 0, 10, 10" CornerRadius="10, 10, 10, 10" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignLeftWithPanel="True" RelativePanel.Below="topPanel" RelativePanel.AlignBottomWithPanel="True">
            <RelativePanel Background="#121212" Padding="10">
                
            </RelativePanel>
        </Border>
    </RelativePanel>
    
